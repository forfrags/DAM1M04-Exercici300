{
 "$schema":"http://json-schema.org/draft-07/schema#",
 "type":"array",
 "items":{
  "type":"object",
  "required":["name","country","location","time_of_year","origins","activities","attendance_estimate"],
  "properties":{
   "name":{"type":"string"},
   "country":{"type":"string"},
   "location":{"type":"string"},
   "time_of_year":{
     "type":"object",
     "properties":{
       "month":{"type":"string"},
       "multi_day":{"type":"boolean"}
     }
   },
   "origins":{
     "type":"object",
     "properties":{
       "century":{"type":"integer"},
       "background":{"type":"string"}
     }
   },
   "themes":{"type":"array","items":{"type":"string"}},
   "activities":{
     "type":"array",
     "items":{
       "type":"object",
       "properties":{
         "title":{"type":"string"},
         "description":{"type":"string"}
       }
     }
   },
   "attendance_estimate":{"type":"integer"},
   "unesco_recognized":{"type":"boolean"}
  }
 }
}
