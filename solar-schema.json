{
 "$schema":"http://json-schema.org/draft-07/schema#",
 "type":"array",
 "items":{
  "type":"object",
  "required":["name","type","orbit","physical"],
  "properties":{
   "name":{"type":"string"},
   "type":{"type":"string"},
   "orbit":{
     "type":"object",
     "properties":{
       "around":{"type":"string"},
       "semi_major_axis_au":{"type":"number"},
       "orbital_period_days":{"type":"number"}
     }
   },
   "physical":{
     "type":"object",
     "properties":{
       "mean_radius_km":{"type":"number"},
       "mass_kg":{"type":"number"},
       "gravity_m_s2":{"type":"number"}
     }
   },
   "atmosphere":{"type":"array","items":{"type":"string"}},
   "satellites":{"type":"array","items":{"type":"object"}},
   "discovery":{"type":"object"}
  }
 }
}
